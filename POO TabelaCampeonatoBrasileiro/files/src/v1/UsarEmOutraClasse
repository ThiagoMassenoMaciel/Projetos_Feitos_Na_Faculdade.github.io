Nâo precisa de muitos metodos se pide acessar a variavel que ja é constante

	public int CalcPonts() {
		
		int pontos =( getVitoria()  * getPeso1()  )
				 		+ 
					( getEmpate()   * getPeso2()   ) 
						+ 
			    	( getDerrotas() * getPeso3() ) ;
		
		return pontos;
	}
	
